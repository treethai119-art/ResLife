# SCORING ALGORITHM

```typescript
interface CheckInScores {
  // Validated subscales
  phq2: number;           // 0-6 (depression)
  gad2: number;           // 0-6 (anxiety, item 4 omitted for brevity - can add)
  loneliness: number;     // 3-9 (UCLA-3)
  belonging: number;      // 1-5
  
  // Single items
  weekRating: number;     // 1-5
  sleepQuality: number;   // 1-5
  
  // Composite
  wellbeingIndex: number; // 0-100 composite score
  
  // Flags
  flags: {
    depressionScreen: boolean;    // PHQ-2 â‰¥ 3
    anxietyScreen: boolean;       // GAD-2 â‰¥ 3 (if included)
    highLoneliness: boolean;      // UCLA-3 â‰¥ 7
    lowBelonging: boolean;        // Belonging < 2.5
    poorSleep: boolean;           // Sleep â‰¤ 2
    needsFollowUp: boolean;       // Any flag true
    urgentConcern: boolean;       // PHQ-2 â‰¥ 5 OR multiple flags
  };
  
  // Resource matching
  suggestedResources: string[];
}

function scoreCheckIn(responses: CheckInResponses): CheckInScores {
  // PHQ-2 scoring (0=Not at all, 1=Several days, 2=More than half, 3=Nearly every day)
  const phq2 = responses.q2 + responses.q3;
  
  // GAD-2 (if we include item 4, otherwise just item 4 alone)
  const gad2 = responses.q4;  // Single item version, or add second item
  
  // UCLA-3 (1=Hardly ever, 2=Some of the time, 3=Often)
  const loneliness = responses.q6 + responses.q7 + (responses.q8_inverted || 0);
  // Note: q8 is belonging, need separate loneliness item or invert
  
  // Belonging (1-5 scale)
  const belonging = responses.q8;
  
  // Single items
  const weekRating = responses.q1;
  const sleepQuality = responses.q5;
  
  // Flags based on validated thresholds
  const flags = {
    depressionScreen: phq2 >= 3,
    anxietyScreen: gad2 >= 2,  // Lower threshold for single item
    highLoneliness: loneliness >= 7,
    lowBelonging: belonging < 2.5,
    poorSleep: sleepQuality <= 2,
    needsFollowUp: false,
    urgentConcern: false
  };
  
  flags.needsFollowUp = Object.values(flags).some(f => f === true);
  flags.urgentConcern = phq2 >= 5 || 
    (flags.depressionScreen && flags.highLoneliness) ||
    (phq2 >= 3 && weekRating <= 2);
  
  // Composite wellbeing index (0-100)
  // Weighted combination of all subscales, normalized
  const wellbeingIndex = computeWellbeingIndex({
    phq2, gad2, loneliness, belonging, weekRating, sleepQuality
  });
  
  // Resource matching based on q9 and q10
  const suggestedResources = matchResources(responses.q9, responses.q10, flags);
  
  return {
    phq2, gad2, loneliness, belonging, weekRating, sleepQuality,
    wellbeingIndex, flags, suggestedResources
  };
}

function computeWellbeingIndex(scores: {
  phq2: number;
  gad2: number;
  loneliness: number;
  belonging: number;
  weekRating: number;
  sleepQuality: number;
}): number {
  // Normalize each to 0-100 scale (higher = better)
  const depression = (1 - scores.phq2 / 6) * 100;      // Invert: lower PHQ = better
  const anxiety = (1 - scores.gad2 / 3) * 100;         // Invert
  const social = (1 - (scores.loneliness - 3) / 6) * 100;  // Invert
  const belong = ((scores.belonging - 1) / 4) * 100;
  const mood = ((scores.weekRating - 1) / 4) * 100;
  const sleep = ((scores.sleepQuality - 1) / 4) * 100;
  
  // Weighted average (weights based on predictive validity for outcomes)
  const weights = {
    depression: 0.25,   // Strong predictor of outcomes
    anxiety: 0.15,
    social: 0.20,       // Key for residential life
    belong: 0.15,
    mood: 0.15,
    sleep: 0.10
  };
  
  return Math.round(
    depression * weights.depression +
    anxiety * weights.anxiety +
    social * weights.social +
    belong * weights.belong +
    mood * weights.mood +
    sleep * weights.sleep
  );
}
```

