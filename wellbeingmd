# SCORING ALGORITHM

```typescript
// Question mapping for clarity:
// q1  = Week rating (1-5)
// q2  = PHQ-2 Item 1 (0-3)
// q3  = PHQ-2 Item 2 (0-3)
// q4  = GAD-2 Item 1 (0-3)
// q5  = GAD-2 Item 2 (0-3)
// q6  = Sleep quality (1-5)
// q7  = Life satisfaction (0-10)
// q8  = UCLA-3 Item 1 (1-3)
// q9  = UCLA-3 Item 2 (1-3)
// q10 = UCLA-3 Item 3 (1-3)
// q11 = Belonging Item 1 (1-5)
// q12 = Belonging Item 2 (1-5)
// q13 = Belonging Item 3 (1-5)
// q14 = Stressors (multi-select)
// q15 = Resources (multi-select)
// q16 = Follow-up preference
// q17 = Free text

interface CheckInScores {
  // Validated subscales (complete)
  phq2: number;           // 0-6 (depression) - full PHQ-2
  gad2: number;           // 0-6 (anxiety) - full GAD-2
  loneliness: number;     // 3-9 (UCLA-3) - all 3 items
  belonging: number;      // 1-5 (mean of 3 items)

  // Single items
  weekRating: number;     // 1-5
  sleepQuality: number;   // 1-5
  lifeSatisfaction: number; // 0-10

  // Composite
  wellbeingIndex: number; // 0-100 composite score

  // Flags
  flags: {
    depressionScreen: boolean;    // PHQ-2 â‰¥ 3
    anxietyScreen: boolean;       // GAD-2 â‰¥ 3
    highLoneliness: boolean;      // UCLA-3 â‰¥ 7
    lowBelonging: boolean;        // Belonging < 2.5
    poorSleep: boolean;           // Sleep â‰¤ 2
    lowLifeSatisfaction: boolean; // Life satisfaction < 5
    needsFollowUp: boolean;       // Any clinical flag true
    urgentConcern: boolean;       // PHQ-2 â‰¥ 5 OR multiple flags
  };

  // Resource matching
  suggestedResources: string[];
}

function scoreCheckIn(responses: CheckInResponses): CheckInScores {
  // PHQ-2 scoring (0=Not at all, 1=Several days, 2=More than half, 3=Nearly every day)
  const phq2 = responses.q2 + responses.q3;  // Full PHQ-2: items 1+2

  // GAD-2 scoring (same 0-3 scale)
  const gad2 = responses.q4 + responses.q5;  // Full GAD-2: items 1+2

  // UCLA-3 (1=Hardly ever, 2=Some of the time, 3=Often)
  const loneliness = responses.q8 + responses.q9 + responses.q10;  // All 3 UCLA items

  // Belonging (mean of 3 items, 1-5 scale each)
  const belonging = (responses.q11 + responses.q12 + responses.q13) / 3;

  // Single items
  const weekRating = responses.q1;
  const sleepQuality = responses.q6;
  const lifeSatisfaction = responses.q7;

  // Flags based on validated thresholds
  const clinicalFlags = {
    depressionScreen: phq2 >= 3,      // Standard PHQ-2 threshold
    anxietyScreen: gad2 >= 3,         // Standard GAD-2 threshold
    highLoneliness: loneliness >= 7,  // Upper tertile
    lowBelonging: belonging < 2.5,    // Below midpoint
    poorSleep: sleepQuality <= 2,     // Bottom 40%
    lowLifeSatisfaction: lifeSatisfaction < 5  // Below neutral
  };

  const flags = {
    ...clinicalFlags,
    needsFollowUp: Object.values(clinicalFlags).some(f => f === true),
    urgentConcern: phq2 >= 5 ||
      (clinicalFlags.depressionScreen && clinicalFlags.highLoneliness) ||
      (phq2 >= 3 && weekRating <= 2)
  };

  // Composite wellbeing index (0-100)
  const wellbeingIndex = computeWellbeingIndex({
    phq2, gad2, loneliness, belonging, weekRating, sleepQuality, lifeSatisfaction
  });

  // Resource matching based on q14 and q15
  const suggestedResources = matchResources(responses.q14, responses.q15, flags);

  return {
    phq2, gad2, loneliness, belonging, weekRating, sleepQuality, lifeSatisfaction,
    wellbeingIndex, flags, suggestedResources
  };
}

function computeWellbeingIndex(scores: {
  phq2: number;
  gad2: number;
  loneliness: number;
  belonging: number;
  weekRating: number;
  sleepQuality: number;
  lifeSatisfaction: number;
}): number {
  // Normalize each to 0-100 scale (higher = better)
  const depression = (1 - scores.phq2 / 6) * 100;           // Invert: lower PHQ = better
  const anxiety = (1 - scores.gad2 / 6) * 100;              // Invert: lower GAD = better
  const social = (1 - (scores.loneliness - 3) / 6) * 100;   // Invert: lower loneliness = better
  const belong = ((scores.belonging - 1) / 4) * 100;
  const mood = ((scores.weekRating - 1) / 4) * 100;
  const sleep = ((scores.sleepQuality - 1) / 4) * 100;
  const satisfaction = (scores.lifeSatisfaction / 10) * 100;

  // Weighted average
  // CALIBRATION NOTE: These weights are initial estimates based on literature.
  // Should be empirically validated using regression on outcomes (GPA, retention)
  // in Study 1 (Validation Study) and adjusted accordingly.
  const weights = {
    depression: 0.20,   // Strong predictor of outcomes
    anxiety: 0.15,      // Comorbid with depression
    social: 0.20,       // Key for residential life mission
    belong: 0.15,       // Retention predictor
    mood: 0.10,         // Global wellbeing signal
    sleep: 0.10,        // Academic performance predictor
    satisfaction: 0.10  // Overall life evaluation
  };

  return Math.round(
    depression * weights.depression +
    anxiety * weights.anxiety +
    social * weights.social +
    belong * weights.belong +
    mood * weights.mood +
    sleep * weights.sleep +
    satisfaction * weights.satisfaction
  );
}
```

---

# ALERT PROTOCOL

## Tiered Response Based on Scores

```
â”Œâ”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”
